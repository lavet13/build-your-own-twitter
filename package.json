{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "web/client",
    "web/server"
  ],
  "scripts": {
    "dev": "concurrently -n client,server -c blue,green \"yarn dev:client\" \"yarn dev:server\"",
    "dev:client": "yarn workspace client dev",
    "dev:server": "yarn workspace server dev",
    "build:client": "yarn workspace client build",
    "build:server": "yarn workspace server build",
    "build": "concurrently -n client,server -c blue,green \"yarn build:client\" \"yarn build:server\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
