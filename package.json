{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "web/client",
    "web/server"
  ],
  "scripts": {
    "dev": "concurrently -n client,server -c blue,green \"yarn dev:client\" \"yarn dev:server\"",
    "dev:client": "yarn workspace client dev",
    "dev:server": "yarn workspace server dev",
    "build": "concurrently -n client,server -c blue,green \"yarn build:client\" \"yarn build:server\"",
    "build:client": "yarn workspace client build",
    "build:server": "yarn workspace server build",
    "preview": "yarn preview:server && yarn preview:client",
    "preview:client": "yarn workspace client preview",
    "preview:server": "yarn workspace server preview",

    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "docker:logs": "docker-compose logs -f postgres"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
